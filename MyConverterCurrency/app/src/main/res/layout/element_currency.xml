<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="0.3dp"
    android:layout_marginBottom="0.3dp"
    android:outlineSpotShadowColor="@android:color/black"
    android:clickable="true"
    android:id="@+id/item_dialog_element_id">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageID"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-20dp"
            android:src="@drawable/united_states_of_america_rectangular_icon_with_frame_256"></ImageView>

        <TextView
            android:id="@+id/textNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imageID"
            android:text="Американский доллар"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textCodeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:text="USD"
            android:textColor="#0000FF"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>