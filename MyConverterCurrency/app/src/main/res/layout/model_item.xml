<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="4dp"
    android:outlineSpotShadowColor="@android:color/black"
    android:id="@+id/container">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="80dp">


        <ImageView
            android:id="@+id/imageID"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-5dp"

            android:src="@drawable/united_states_of_america_rectangular_icon_with_frame_256"></ImageView>

        <TextView
            android:id="@+id/textNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageID"
            android:text="Американский доллар"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textNominalID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNameID"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageID"
            android:text="1"
            android:textColor="@android:color/darker_gray"
            style="@style/TextSize"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textCodeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNameID"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textRavno"
            android:text="USD"
            android:textColor="@android:color/darker_gray"
            style="@style/TextSize"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textRavno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNameID"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textValueID"
            android:text="="
            android:textColor="@android:color/darker_gray"
            style="@style/TextSize"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textValueID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNameID"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textRUBID"
            android:text="57,45"
            android:textColor="@android:color/darker_gray"
            style="@style/TextSize"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textRUBID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNameID"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="RUB"
            android:textColor="@android:color/darker_gray"
            style="@style/TextSize"
            android:textStyle="bold"></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>